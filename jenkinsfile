pipeline {
    agent any

    stages {

        stage('Build Backend') {
            steps {
                script {
                    docker.image('node:20-alpine').inside {
                        sh '''
                        cd server
                        npm install
                        '''
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    docker.image('node:20-alpine').inside {
                        sh '''
                        cd client
                        npm install
                        npm run build
                        '''
                    }
                }
            }
        }

        stage('Deploy Frontend to Vercel') {
            steps {
                script {
                    docker.image('node:20-alpine').inside {
                        withCredentials([string(credentialsId: 'VERCEL_TOKEN', variable: 'VERCEL_TOKEN')]) {
                            sh '''
                            cd client
                            sh 'npx vercel --prod --token=$VERCEL_TOKEN --yes'
                            '''
                        }
                    }
                }
            }
        }

    }
 }